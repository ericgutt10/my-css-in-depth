@page "/"

<div class="flex">
    @* main title *@
    <div class=" flex-[2] p-5 bg-emerald-50 mt-3 space-y-3">
        <fieldset class="border-2 p-3">
            <h1 class="text-4xl font-bold">Team collaboration done right</h1>
            <p class=" mt-2 text-1xl font-bold">
                Thousands of teams from all over the
                world turn to <b>Ink</b> to communicate
                and get things done.
            </p>
        </fieldset>

        <fieldset class="border-2 p-3" title="Title">
            <h1 class="text-4xl font-bold">Team collaboration done right</h1>
            <p class=" mt-2 text-1xl font-bold">
                Thousands of teams from all over the
                world turn to <b>Ink</b> to communicate
                and get things done.
            </p>
        </fieldset>
        <fieldset class="border-2 p-3" title="Title">
            <h1 class="text-4xl font-bold">Team collaboration done right</h1>
            <p class=" mt-2 text-1xl font-bold">
                Thousands of teams from all over the
                world turn to <b>Ink</b> to communicate
                and get things done.
            </p>
        </fieldset>
    </div>
    @* side bar *@
    <div class=" flex-1 flex flex-col ml-2 mt-3 space-y-3">
        @* top tile *@
        <div class=" flex-1 bg-emerald-50 p-3">
            <form action="">
                <h3 class="text-2xl text -bold">Login</h3>
                <p>
                    <label class="m-0" for="username">Username</label>
                    <input class="m-2 border-2" id="username" type="text" name="username" />
                </p>
                <p>
                    <label class="m-0" for="password">Password</label>
                    <input class="m-2 border-2" id="password" type="password" name="password" />
                </p>
                <button class="border-2 rounded px-2 " type="submit">Login</button>
            </form>
        </div>
        @* center tile *@
        <div class=" flex-1 bg-emerald-50 p-3">
            <small>Starting at</small>
            <div class="cost">
                <span class="cost-currency">$</span>
                <span class="cost-dollars">20</span>
                <span class="cost-cents">.00</span>
            </div>
            <a class="cta-button" href="/pricing">
                Sign up
            </a>
        </div>
    </div>
</div>
