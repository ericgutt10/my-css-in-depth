        </fieldset>    </div>
    @* side bar *@
    <div class=" flex-1 flex flex-col ml-2 mt-3 space-y-3">
        @* top tile *@
        <div class=" flex-auto  bg-emerald-50 p-3">
            <form action="" class="text-xl font-bold">
                <h3 class="uppercase text-right">Login</h3>
                <p class="my-2">
                    <label class="" for="username">Username</label>
                    <input class="block text-lg font-normal w-full rounded border-2 focus:border-4 focus:outline-none"
                      placeholder="username" id="username" type="text" name="username" />
                </p>
                <p class="my-2">
                    <label class="" for="password">Password</label>
                    <input class="block text-lg font-normal w-full rounded border-2 focus:border-4 focus:outline-none"
                     placeholder="password" id="password" type="password" name="password" />
                </p>
                <button class="border-4 rounded px-2 mt-4" type="submit">Login</button>
            </form>
        </div>
        @* center tile *@
        <div class=" flex-auto bg-emerald-50 p-3">
            <small>Starting at</small>
            <div class="cost">
                <span class="cost-currency">$</span>
                <span class="cost-dollars">20</span>
                <span class="cost-cents">.00</span>
            </div>
            <a class="cta-button" href="/pricing">
                Sign up
            </a>
        </div>
    </div>
</div>
